<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7DB8C3"
    tools:context=".AdventureLevel1">

    <TextView
        android:id="@+id/training_txtView"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Knight Training"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="38dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="29dp"
        android:layout_height="691dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="25dp"
        android:layout_height="687dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </LinearLayout>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView4"
        android:layout_width="357dp"
        android:layout_height="652dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/training_txtView"
        app:srcCompat="@drawable/grass"
        app:strokeColor="#3F51B5"
        app:strokeWidth="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="588dp"
        android:background="@drawable/wizard_dialogue_textview"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <ImageView
        android:id="@+id/path_forA"
        android:layout_width="162dp"
        android:layout_height="189dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="30dp"
        android:rotation="40"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:srcCompat="@drawable/path" />

    <ImageView
        android:id="@+id/flower_node_2"
        android:layout_width="63dp"
        android:layout_height="67dp"
        android:layout_marginEnd="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.693" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/next"
        app:backgroundTint="#80FFFF00"
        app:elevation="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/pathA"
        android:layout_width="193dp"
        android:layout_height="179dp"
        android:layout_marginBottom="30dp"
        android:rotation="-40"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:srcCompat="@drawable/path" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="156dp"
        android:layout_height="145dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/pathA"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:srcCompat="@drawable/path" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="174dp"
        android:layout_height="143dp"
        android:layout_marginEnd="92dp"
        android:rotation="65"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.646"
        app:srcCompat="@drawable/path" />

    <TextView
        android:id="@+id/path_A_txtView"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="A"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/knight1"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.679" />

    <TextView
        android:id="@+id/path2_A_txtView"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:layout_marginStart="152dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="A"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.638" />

    <TextView
        android:id="@+id/path_B_txtView"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="B"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/knight1"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.705" />

    <TextView
        android:id="@+id/path2_B_txtView"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:layout_marginEnd="260dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="B"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.484" />

    <ImageView
        android:id="@+id/flower_node_goal"
        android:layout_width="143dp"
        android:layout_height="150dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="204dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/knight1"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.518" />

    <ImageView
        android:id="@+id/flower_node_goal2"
        android:layout_width="143dp"
        android:layout_height="150dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="352dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/flower_node_"
        android:layout_width="63dp"
        android:layout_height="67dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="56dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/knight1"
        android:layout_width="87dp"
        android:layout_height="97dp"
        android:layout_marginBottom="4dp"
        android:foregroundGravity="center|fill"
        android:scaleType="fitCenter"
        android:src="@drawable/idle_knight"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/txtWizarddialogue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="35dp"
        android:padding="16dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wizard1"
        android:layout_width="122dp"
        android:layout_height="160dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />


</androidx.constraintlayout.widget.ConstraintLayout>
